{
  "name": "@pixelaw/vanilla",
  "private": false,
  "version": "0.6.20",
  "type": "module",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "author": "thiscaspar",
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "use-workspace": "node scripts/switchDependencies.js --workspace && pnpm install && pnpm build",
    "use-regular": "node scripts/switchDependencies.js && pnpm install && pnpm upgrade_pixelaw",
    "experiments": "tsx  src/scripts/experiments.ts",
    "build-serve": "vite build && http-server dist/",
    "dev": "NODE_ENV=development && vite",
    "build-prod": "tsc && vite build",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "coverage": "vitest run --coverage",
    "upgrade_dojo": "yarn add @dojoengine/core @dojoengine/create-burner @dojoengine/react @dojoengine/recs @dojoengine/state @dojoengine/torii-client @dojoengine/utils @dojoengine/sdk @cartridge/connector",
    "upgrade_pixelaw": "pnpm update @pixelaw/core @pixelaw/core-dojo @pixelaw/core-mud @pixelaw/react @pixelaw/react-dojo",
    "check": "biome check --apply ."
  },
  "dependencies": {
    "@pixelaw/core": "^0.6.20",
    "@pixelaw/core-dojo": "^0.6.20",
    "@pixelaw/core-mud": "^0.6.20",
    "@pixelaw/react": "^0.6.20",
    "@pixelaw/react-dojo": "^0.6.20",
    "http-server": "^14.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.1.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "unstorage": "^1.14.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.13.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-envs": "^4.4.10",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.4.1",
    "vitest": "^2.1.8"
  }
}
